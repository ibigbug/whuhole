.wrap
  max-width 60%

.logo h1
  font-family 'Frijole', cursive
  font-size 5em
  
.form-container
  margin 0 auto
  margin-top 2em

.form-container button
  margin-top .5em

.topic-stream
  margin-top 4em

.footer
  border-top .1em solid #eee
  text-align center
  position relative
  width 100%
  bottom 0

.inner-footer
  margin 1em

.topic-stream .topic-list >.list-group-item:first-child
  border-top-left-radius 0
  border-top-right-radius 0
  border-top none

.topic-list .toolbar
  margin-top 1.5em
  border-top 0.1em solid #eee
  padding-top 0.8em

.topic-list .toolbar .reply-form
  margin-top 1em

.topic-list .toolbar .reply-form textarea
  height 2.5em
  margin-bottom 0.5em
  width 90%
  margin-right -100%

.reply-list
  margin-top 2em

.js-like,
.js-reply
  cursor pointer
